<Application x:Class="TemperatureAlerter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:local="clr-namespace:TemperatureAlerter">
    <Application.Resources>
        <ResourceDictionary>
            <tb:TaskbarIcon x:Key="TaskbarIcon"
                            IconSource="argebee.ico"
                            ToolTip="Temperature Alerter"
                            MenuActivation="RightClick" >
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Exit" Command="{Binding Source={x:Static local:ApplicationManager.Instance}, Path=ExitCommand}" />
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </ResourceDictionary>
    </Application.Resources>
</Application>
